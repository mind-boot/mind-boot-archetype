#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<!-- 只需配置好 log.dir 和 projectname 属性-->
<configuration debug="true">
	<property name="log.dir" value="./logs/${parentArtifactId}-api" />
	<property name="projectname" value="${parentArtifactId}-api" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder charset="UTF-8">
			<pattern>%d [%thread] %-5p [%c] [%F:%L] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="infoAppender"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${symbol_dollar}{log.dir}/${symbol_dollar}{HOSTNAME}_${symbol_dollar}{projectname}.log</file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${symbol_dollar}{log.dir}/${symbol_dollar}{HOSTNAME}_${symbol_dollar}{projectname}-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder charset="UTF-8">
			<pattern>%d [%thread] %-5p [%c] [%F:%L] [trace=%X{X-Trace-Id:-},span=%X{X-Span-Id:-},parent=%X{X-Parent-Id:-},name=%X{X-Span-Name:-},app=%X{appname:-},begintime=%X{begintime:-}] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="errorAppender"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${symbol_dollar}{log.dir}/${symbol_dollar}{HOSTNAME}_${symbol_dollar}{projectname}_error.log</file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${symbol_dollar}{log.dir}/${symbol_dollar}{HOSTNAME}_${symbol_dollar}{projectname}-error-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder charset="UTF-8">
			<pattern>%d [%thread] %-5p [%c] [%F:%L] - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.apache">
		<level value="INFO" />
		<appender-ref ref="errorAppender" />
		<appender-ref ref="infoAppender" />	
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
		<appender-ref ref="errorAppender" />
		<appender-ref ref="infoAppender" />	
	</logger>
	<logger name="${package}">
		<level value="INFO" />
		<appender-ref ref="errorAppender" />
		<appender-ref ref="infoAppender" />		
	</logger>

	<logger name="com.netflix">
		<level value="WARN" />
		<appender-ref ref="errorAppender" />
		<appender-ref ref="infoAppender" />
	</logger>


	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>